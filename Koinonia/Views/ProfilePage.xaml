<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"             
             mc:Ignorable="d"
             x:Class="Koinonia.Views.ProfilePage"
             Title="Profile">
    
    <ContentPage.Content>
        <!-- Add binding context to remove Profile.property necessity? -->
        <StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">

                <Label Text="{Binding Profile.FirstName}"
                       Style="{StaticResource TitleTxt}"
                />

                <Label Text="{Binding Profile.LastName}"
                       Style="{StaticResource TitleTxt}"
                />

            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">

                <Label Text="{Binding Profile.PhoneNumber}"
                       Margin="0, 0, 0, 20"
                />

            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">

                <Label Text="{Binding Profile.Email}"
                       Margin="0, 0, 0, 20"
                />

            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Text="Delete Profile"
                        Command="{Binding DeleteCommand}"
                />
                <Button Text="Edit"
                        Command="{Binding EditCommand}"
                />
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>